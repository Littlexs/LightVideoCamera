<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bdxk.lightvideorecord.ui.LightVideoActivity">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imgChangeFace"
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/change"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <RelativeLayout
        android:id="@+id/layout_recod"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <TextView
            android:id="@+id/tvUseTime"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgStart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/video_bg"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvFinish"
            android:text="完成 》"
            android:textSize="14sp"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvStart"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvDel"
            android:text="《 删除"
            android:textSize="14sp"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tvStart"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvImport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="导入"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
